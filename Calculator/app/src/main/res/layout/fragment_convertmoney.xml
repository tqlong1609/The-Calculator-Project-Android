<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/convertmoney"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:weightSum="11">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="VND"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#F67519"/>
    <EditText
        android:tag="0"
        android:hint="Việt Nam Đồng"
        android:id="@+id/edt_VND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"/>
</LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="EUR"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#F67519"/>
    <EditText
        android:tag="1"
        android:hint="Euro"
        android:id="@+id/edt_EUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="GBP"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="2"
            android:hint="Đồng bảng Anh"
            android:id="@+id/edt_GBP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="JPY"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="3"
            android:hint="Đồng Yên Nhật"
            android:id="@+id/edt_JPY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="USD"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="4"
            android:hint="Đồng đô la Mỹ"
            android:id="@+id/edt_USD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="AUD"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="5"
            android:hint="Đồng đô la Úc"
            android:id="@+id/edt_AUD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="CAD"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="6"
            android:hint="Đồng đô la Canada"
            android:id="@+id/edt_CAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="CHF"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="7"
            android:hint="Đồng Franc Thụy Sỹ"
            android:id="@+id/edt_CHF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="CNY"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="8"
            android:hint="Đồng Nhân Dân tệ"
            android:id="@+id/edt_CNY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="KRW"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="9"
            android:hint="Đồng Won Hàn Quốc"
            android:id="@+id/edt_KRW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="SGD"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F67519"/>
        <EditText
            android:tag="10"
            android:hint="Đồng đô la Singapore"
            android:id="@+id/edt_SGD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>
